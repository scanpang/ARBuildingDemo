<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- AR/카메라 뷰 -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 라벨 컨테이너 (오버레이) -->
    <FrameLayout
        android:id="@+id/labelContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 상단 바 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingTop="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_top"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 로고 버튼 -->
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#33FFFFFF">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 모드 버튼 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✦ 일반"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:background="@drawable/rounded_button_bg" />

    </LinearLayout>

    <!-- 상태 표시 -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/status_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/statusDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_dot_green" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="건물 감지 중..."
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 디버그 패널 -->
    <TextView
        android:id="@+id/debugText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="120dp"
        android:padding="12dp"
        android:background="#B3000000"
        android:textColor="#00FF00"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:maxWidth="320dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/debugPanel"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="120dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/debugTextScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#B3000000"
            android:textColor="#00FF00"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:maxWidth="320dp" />

    </ScrollView>

    <!-- 하단 컨트롤 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:paddingBottom="40dp"
        android:background="@drawable/gradient_bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/control_bar_bg">

            <!-- 설정 버튼 -->
            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="@android:color/white"
                android:background="@drawable/control_button_secondary" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- 확인 버튼 -->
            <ImageView
                android:id="@+id/btnConfirm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_save"
                android:tint="@android:color/white"
                android:background="@drawable/control_button_primary" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- 리셋 버튼 -->
            <ImageView
                android:id="@+id/btnReset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_rotate"
                android:tint="@android:color/white"
                android:background="@drawable/control_button_secondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
